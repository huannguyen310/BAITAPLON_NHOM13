@model IEnumerable<ThietBiDienTu.Models.NhapKho>

@{
    ViewData["Title"] = "Index";
}

<div class="w3-row">
    <b>NHAPKHO LIST</b>
    <a class="w3-right w3-big w3-btn w3-round w3-border w3-teal" asp-action="Create">Create new</a>
</div>
<hr>
<table class="w3-container w3-table w3-striped w3-border w3-centered test w3-hoverable">
    <thead>
        <tr class="w3-teal">
            <th>
                @Html.DisplayNameFor(model => model.HangHoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayNhapKho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhaCungCap)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HangHoa.MaHH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayNhapKho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaCungCap.MaNCC)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaNhapKho">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaNhapKho">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaNhapKho">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
