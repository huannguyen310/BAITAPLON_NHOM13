@model IEnumerable<ThietBiDienTu.Models.KhachHang>

@{
    ViewData["Title"] = "Index";
}

<div class="w3-row">
    <b>KHACHHANG LIST</b>
    <a class="w3-right w3-big w3-btn w3-round w3-border w3-teal" asp-action="Create">Create New</a>
</div>
<hr>
<table class="w3-container w3-table w3-striped w3-border w3-centered test w3-hoverable">
    <thead>
        <tr class="w3-teal">
            <th>
                @Html.DisplayNameFor(model => model.MaKH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenKH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDT)
            </th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaKH">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaKH">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaKH">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>