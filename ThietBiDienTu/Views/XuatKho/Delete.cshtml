@model ThietBiDienTu.Models.XuatKho

@{
    ViewData["Title"] = "Delete";
}

<div class="w3-row">
    <h1>XÓA HÀNG XUẤT KHO</h1>
</div>
<hr>
<div class="max-width-40 ud-center">
    <div class="w3-container w3-teal">
        <h2>Bạn có chắc chắn muốn xóa mặt hàng này không?</h2>
    </div>
    <form asp-action="Delete" class="w3-container w3-card-4 w3-padding">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="w3-row">
            <dl class="row">
                <dt class = "col-sm-2">
                    Mã hàng:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.HangHoa.MaHH)
                </dd>
                <dt class = "col-sm-2">
                    Tên hàng:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.TenHH)
                </dd>
                <dt class = "col-sm-2">
                    Mã NCC:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NhaCungCap.MaNCC)
                </dd>
                <dt class = "col-sm-2">
                    Tên NCC:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.TenNCC)
                </dd>
                <dt class = "col-sm-2">
                    Mã xuất kho:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.MaXuatKho)
                </dd>
                <dt class = "col-sm-2">
                    Ngày xuất kho:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NgayXuatKho)
                </dd>
                <dt class = "col-sm-2">
                    Trạng thái:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.TrangThai)
                </dd>
                <dt class = "col-sm-2">
                    Khách hàng:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.KhachHang.MaKH)
                </dd>
            </dl>
        </div>
        <div class="w3-margin-top">
            <input type="hidden" asp-for="MaHH">
            <input type="submit" value="Xóa" class="btn btn-danger  w3-border w3-teal" /> |
            <a asp-action="Index" class="btn btn-danger w3-border w3-teal">Trở lại</a>
        </div>
    </form>
</div>
