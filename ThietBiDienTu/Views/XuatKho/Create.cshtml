@model ThietBiDienTu.Models.XuatKho

@{
    ViewData["Title"] = "Create";
}

<div class="w3-row">
    <h1>XUẤT HÀNG</h1>
    <a class="w3-btn w3-round w3-border w3-teal w3-right" asp-action="Index">Trở lại</a>
</div>
<hr>
<div class="max-width-40 ud-center">
    <div class="w3-container w3-teal">
        <h2>Thông tin hàng được xuất kho</h2>
    </div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="w3-row">
            <div class="w3-col-l3">
                <label asp-for="MaHH" class="control-label">Mã hàng</label>
                <select asp-for="MaHH" class ="w3-input w3-border w3-border-black w3-round" asp-items="ViewBag.MaHH"></select>
            </div>
            <div class="w3-col-l3">
                <label asp-for="TenHH" class="control-label">Tên hàng</label>
                <input asp-for="TenHH" class="w3-input w3-border w3-border-black w3-round" />
                <span asp-validation-for="TenHH" class="text-danger"></span>
            </div>
            <div class="w3-col-l3">
                <label asp-for="MaNCC" class="control-label">Mã NCC</label>
                <select asp-for="MaNCC" class ="w3-input w3-border w3-border-black w3-round" asp-items="ViewBag.MaNCC"></select>
            </div>
            <div class="w3-col-l3">
                <label asp-for="TenNCC" class="control-label">Tên NCC</label>
                <input asp-for="TenNCC" class="w3-input w3-border w3-border-black w3-round" />
                <span asp-validation-for="TenNCC" class="text-danger"></span>
            </div>
            <div class="w3-col-l3">
                <label asp-for="MaXuatKho" class="control-label">Mã xuất kho</label>
                <input asp-for="MaXuatKho" class="w3-input w3-border w3-border-black w3-round" />
                <span asp-validation-for="MaXuatKho" class="text-danger"></span>
            </div>
            <div class="w3-col-l3">
                <label asp-for="NgayXuatKho" class="control-label">Ngày xuất kho</label>
                <input asp-for="NgayXuatKho" class="w3-input w3-border w3-border-black w3-round" />
                <span asp-validation-for="NgayXuatKho" class="text-danger"></span>
            </div>
            <div class="w3-col-l3">
                <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                <input asp-for="TrangThai" class="w3-input w3-border w3-border-black w3-round" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="w3-col-l3">
                <label asp-for="MaKH" class="control-label">Khách hàng</label>
                <select asp-for="MaKH" class ="w3-input w3-border w3-border-black w3-round" asp-items="ViewBag.MaKH"></select>
            </div>
        </div> 
        <div class="w3-margin-top">
            <input type="submit" value="Lưu" class="btn btn-primary w3-border w3-teal" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
