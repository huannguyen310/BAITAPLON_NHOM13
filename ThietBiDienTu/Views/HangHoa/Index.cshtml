@model IEnumerable<ThietBiDienTu.Models.HangHoa>

@{
    ViewData["Title"] = "Index";
}

<div class="w3-row">
    <b>HANGHOA LIST</b>
    <a class="w3-right w3-big w3-btn w3-round w3-border w3-teal" asp-action="Create">Create New</a>
</div>
<hr>
<table class="w3-container w3-table w3-striped w3-border w3-centered test w3-hoverable">
    <thead>
        <tr class="w3-teal">
            <th>
                @Html.DisplayNameFor(model => model.MaHH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenHH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HangSX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XuatXu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaHH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HangSX)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.XuatXu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaHH">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaHH">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaHH">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>